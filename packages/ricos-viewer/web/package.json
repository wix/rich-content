{
  "name": "ricos-viewer",
  "version": "8.46.19",
  "author": {
    "name": "Matan Harsat",
    "email": "matanha@wix.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wix/ricos.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wix/ricos/issues"
  },
  "homepage": "https://github.com/wix/ricos/tree/master/packages/ricos-viewer",
  "files": [
    "dist",
    "libs",
    "viewer"
  ],
  "main": "dist/cjs/index.js",
  "types": "dist/src/index.d.ts",
  "module": "dist/es/index.js",
  "style": "dist/styles.min.css",
  "scripts": {
    "clean": "rm -rf dist/",
    "prebuild": "npm run clean",
    "build:rollup": "rollup --environment DYNAMIC_IMPORT,MODULE_NAME:ricos-viewer -c ../../../rollup.config.js",
    "build": "npm run build:rollup && node ../../../scripts/cssFix.js",
    "build:dev": "cross-env NODE_ENV=development BUILD_CJS=true npm run build",
    "build:analyze:editor": "npm run build -- --environment MODULE_ANALYZE_EDITOR  && open stats.html",
    "build:analyze:viewer": "npm run build -- --environment MODULE_ANALYZE_VIEWER && open stats.html",
    "watch": "cross-env NODE_ENV=development MODULE_WATCH=1 BUILD_CJS=true npm run build:rollup -- --watch.chokidar",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx,d.ts}'",
    "test": "jest --verbose",
    "test:watchAll": "jest --verbose --watchAll"
  },
  "peerDependencies": {
    "@babel/runtime": "^7.2.0",
    "classnames": "^2.0.0",
    "lodash": "^4.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "dependencies": {
    "react-modal": "~3.4.1",
    "ricos-common": "8.46.19",
    "wix-rich-content-common": "8.46.19",
    "wix-rich-content-fullscreen": "8.46.19",
    "wix-rich-content-text-selection-toolbar": "8.46.19",
    "wix-rich-content-viewer": "8.46.19"
  },
  "jest": {
    "globals": {
      "NODE_ENV": "test"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest",
      "^.+\\.jsx?$": "<rootDir>/../../../babel.jest.monorepo.js"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|svg)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "unpkg": true,
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
