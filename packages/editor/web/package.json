{
  "private": false,
  "name": "wix-rich-content-editor",
  "version": "8.46.18",
  "author": {
    "name": "Jonathan Bachman",
    "email": "jonathanb@wix.com"
  },
  "main": "dist/cjs/index.js",
  "types": "dist/src/index.d.ts",
  "module": "dist/es/index.js",
  "style": "dist/styles.min.scss",
  "files": [
    "dist",
    "libs",
    "viewer"
  ],
  "scripts": {
    "clean": "rm -rf dist/",
    "prebuild": "npm run clean",
    "build:rollup": "rollup --environment DYNAMIC_IMPORT,MODULE_NAME:editor -c ../../../rollup.config.js",
    "build": "npm run build:rollup && node ../../../scripts/cssFix.js",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:analyze:editor": "npm run build -- --environment MODULE_ANALYZE_EDITOR  && open stats.html",
    "build:analyze:viewer": "npm run build -- --environment MODULE_ANALYZE_VIEWER && open stats.html",
    "watch": "cross-env NODE_ENV=development MODULE_WATCH=1 npm run build:rollup -- --watch.chokidar",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx,d.ts}'",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --verbose"
  },
  "jest": {
    "globals": {
      "NODE_ENV": "test"
    },
    "testMatch": [
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest",
      "^.+\\.jsx?$": "<rootDir>/../../../babel.jest.monorepo.js"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|svg)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "dependencies": {
    "draft-js-drag-n-drop-plugin": "~2.0.4",
    "draft-js-list-plugin": "^1.0.2",
    "draft-js-plugins-editor": "~3.0.0",
    "forked-draft-js-focus-plugin": "^3.0.1",
    "react-click-outsider": "1.1.1",
    "react-measure": "~2.3.0",
    "wix-rich-content-common": "8.46.18",
    "wix-rich-content-editor-common": "8.46.18",
    "wix-rich-content-plugin-commons": "8.46.18",
    "wix-rich-content-ui-components": "8.46.18",
    "wix-tiptap-editor": "8.46.18"
  },
  "peerDependencies": {
    "@babel/runtime": "^7.2.0",
    "classnames": "^2.0.0",
    "lodash": "^4.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "unpkg": true,
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
